---
const { titulo, imagen, precio, descripcion } = Astro.props;
const whatsappMsg = encodeURIComponent(
    `Hola! Estoy interesado en el cuadro "${titulo}". ¿Está disponible?`
);
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
    <img
        src={imagen}
        alt={titulo}
        class="w-full h-64 object-cover"
    />
    <div class="p-6">
        <h3 class="text-xl font-semibold mb-2">{titulo}</h3>
        <p class="text-gray-600 mb-4">{descripcion}</p>
        <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-gray-800">{precio}</span>
            <a
                href={`https://wa.me/549XXXXXXXXXX?text=${whatsappMsg}`}
                target="_blank"
                class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition-colors"
            >
                Consultar
            </a>
        </div>
    </div>
</article>
