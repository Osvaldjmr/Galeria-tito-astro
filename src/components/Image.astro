---
interface Props {
    src: string;
    alt: string;
    className?: string;
}

const { src, alt, className = "" } = Astro.props;
---

<div class="overflow-hidden">
    <img
        src={src}
        alt={alt}
        class={`transform hover:scale-110 transition-all duration-500 ${className}`}
        loading="lazy"
    />
</div>
