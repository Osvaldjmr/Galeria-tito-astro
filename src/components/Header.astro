---
const currentPath = Astro.url.pathname;
---

<header class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark py-6 transition-colors duration-300">
    <nav class="container mx-auto px-4">
        <div class="flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-primary-DEFAULT dark:text-primary-light hover:text-primary-dark dark:hover:text-primary-DEFAULT transition-colors">
                Tito Arte
            </a>
            <div class="flex space-x-6">
                <a 
                    href="/" 
                    class={`hover:text-primary-DEFAULT dark:hover:text-primary-light transition-colors ${currentPath === '/' ? 'text-accent-DEFAULT dark:text-accent-light' : ''}`}
                >
                    Inicio
                </a>
                <a 
                    href="/galeria" 
                    class={`hover:text-primary-DEFAULT dark:hover:text-primary-light transition-colors ${currentPath === '/galeria' ? 'text-accent-DEFAULT dark:text-accent-light' : ''}`}
                >
                    Galer√≠a
                </a>
                <a 
                    href="/contacto" 
                    class={`hover:text-primary-DEFAULT dark:hover:text-primary-light transition-colors ${currentPath === '/contacto' ? 'text-accent-DEFAULT dark:text-accent-light' : ''}`}
                >
                    Contacto
                </a>
            </div>
        </div>
    </nav>
</header>
